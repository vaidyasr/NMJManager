<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="4dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detailsRunTime"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/edit_runtime"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detailsRating"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/edit_rating"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="4dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detailsReleaseDate"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/edit_release_date"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detailsCertification"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/edit_certification"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

</merge>